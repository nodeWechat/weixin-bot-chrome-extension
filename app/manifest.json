{
  "name": "wechat-bot-chrome-extension",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "wechat-bot-chrome-extension",
  "icons": {
    "16": "images/wechat4u-16.png",
    "128": "images/wechat4u-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts.build/background.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "background",
    "notifications"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/wechat4u-16.png",
      "38": "images/wechat4u-32.png"
    },
    "default_title": "wechat bot",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/wechat4u-48.png"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
